{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.2",
    "title": "mlp_backend",
    "description": "Interface to the mlp_backend Plattform",
    "contact": {
      "name": "Robert Wagner"
    }
  },
  "servers": [
    {
      "url": "/mlp_backend"
    },
    {
      "url": "https://test-url.com/mlp_backend",
      "variables": {
        "environment": {
          "enum": [
            "dit.",
            "dev.",
            "staging.",
            ""
          ],
          "default": "dit."
        }
      }
    },
    {
      "url": "{url}",
      "variables": {
        "url": {
          "default": "http://localhost"
        }
      }
    }
  ],
  "tags": [
    {
      "name": "registration",
      "description": "initial user signup"
    },
    {
      "name": "maintenance",
      "description": "maintenance of user master data"
    }
  ],
  "paths": {
    "/jwt": {
      "get": {
        "summary": "get inital token",
        "description": "get jwt token for further requests",
        "operationId": "jwt_get",
        "tags": [
          "jwt"
        ],
        "security": [],
        "responses": {
          "200": {
            "description": "token created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "parameters": [
          {
            "name": "user_name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "summary": "get person data",
        "description": "get the persons data using current credentials",
        "operationId": "user_get",
        "x-user_role": [
          "customer"
        ],
        "tags": [
          "maintenance"
        ],
        "security": [
          {
            "bearer_auth": []
          }
        ],
        "responses": {
          "200": {
            "description": "person found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/signup_user": {
      "post": {
        "summary": "create a person",
        "description": "create a person using name, given name in the body and email address/password in basic auth header. this email address will receive a mail to activate the account.",
        "operationId": "user_create",
        "tags": [
          "registration"
        ],
        "security": [],
        "requestBody": {
          "description": "Address to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "person created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserId"
                }
              }
            }
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "409": {
            "description": "person already created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/verify": {
      "post": {
        "summary": "verify a person",
        "description": "create a person using name, given name in the body and email address/password in basic auth header. this email address will receive a mail to activate the account.",
        "operationId": "user_verify",
        "tags": [
          "registration"
        ],
        "security": [],
        "requestBody": {
          "description": "verify a token",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserVerify"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "person verified"
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "409": {
            "description": "person already created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "login a person",
        "description": "create a person using name, given name in the body and email address/password in basic auth header. this email address will receive a mail to activate the account.",
        "operationId": "user_login",
        "tags": [
          "maintenance"
        ],
        "security": [
          {
            "bearer_auth": []
          }
        ],
        "requestBody": {
          "description": "verify a token",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "person found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "basicAuth": []
    },
    {
      "access_token": []
    },
    {
      "bearer_auth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic",
        "description": "email address and password"
      },
      "access_token": {
        "type": "http",
        "scheme": "bearer",
        "description": "the access_token received from the idp"
      },
      "bearer_auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "NewUser": {
        "type": "object",
        "properties": {
          "email_address:": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "UserId": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "integer"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error_code": {
            "type": "integer"
          },
          "error_message": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "integer"
          },
          "user_name": {
            "type": "string"
          },
          "email_address": {
            "type": "string"
          }
        }
      },
      "UserVerify": {
        "type": "object",
        "properties": {
          "verification_code": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "user_name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      }
    }
  }
}